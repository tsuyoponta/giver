<%= render "shared/second_header" %>

<%= form_with model: @user, url: user_registration_path, class: "form-main", local: true do |f|%>
<div class='form-wrap'>
  <div class="form-header">
    <h1 class="form-header-text">
      新規アカウント作成
    </h1>
  </div>

  <%= render "shared/error_messages", model: f.object %>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :nickname, class:"input-default", autofocus: true, placeholder:"例）席ゆず郎" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", placeholder:"PC・携帯どちらでも可" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="submit-btn">
    <%= f.submit "アカウント作成", class:"submit-btn-green" %>
  </div>
  <div class="divider">
    <span class="divider-text">アカウントをお持ちですか？</span>
  </div>
  <div class="login-link">
    <%= render "devise/shared/links" %>
  </div>
</div>
<% end %>

<%= render "shared/footer" %>